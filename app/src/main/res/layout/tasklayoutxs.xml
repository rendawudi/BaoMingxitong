<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.rd.rdmvvm.views.TaskActivity1">

    <data>
        <variable
            name="taskModelXS"
            type="com.example.rd.baomingxitong.ViewModel.TaskViewModelXS"
            />
        <import type="android.view.View"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zhujiemianXS">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/taskXsZhujiemian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="项目名称"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:text="@{taskModelXS.task.xiangmu}"
                    android:lines="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@{taskModelXS.task.shenbaoren}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="申报人"
                        android:textSize="17dp"
                        />
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.laoshi}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="指导老师"/>
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.laoshigonghao}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="指导老师工号"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.banji}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="专业班级"/>
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.xuehao}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="学号"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.renshu}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="小组人数"/>
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.jingfei}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="经费预算"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="批次"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:autoLink="all"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:autoLink="all"
                        android:text="@{taskModelXS.piciMingcheng}"
                        android:textSize="18dp"
                        android:hint="选择老师要求的批次"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="20dp"
                        android:text="项目简介"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.jianjie}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="项目简介"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="20dp"
                        android:text="实施方案"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.fangan}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="实施方案"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="20dp"
                        android:text="实施进度"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.jindu}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="实施进度"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="20dp"
                        android:text="特色和创新点"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.tese}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="特色和创新点"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="20dp"
                        android:text="预期成果"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="17dp"
                        android:text="@{taskModelXS.task.chengguo}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="预期成果"
                        />
                </LinearLayout>



            <LinearLayout
                android:id="@+id/yijianLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{taskModelXS.steacher ? View.GONE : View.VISIBLE}"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="老师意见："
                    android:textStyle="bold"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="@{taskModelXS.laoshiyijian}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="部门意见："
                    android:textStyle="bold"
                    android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="@{taskModelXS.bumenyijian}"/><TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中心意见："
                android:textStyle="bold"
                android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="@{taskModelXS.zhongxinyijian}"/><TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="专家意见："
                android:textStyle="bold"
                android:textSize="19dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="@{taskModelXS.zhanjiayijian}"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{taskModelXS.steacher ? View.VISIBLE : View.GONE}"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="老师意见："
                        android:textStyle="bold"
                        android:textSize="19dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@={taskModelXS.laoshiyijian}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="部门意见："
                        android:textStyle="bold"
                        android:textSize="19dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@={taskModelXS.bumenyijian}"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="中心意见："
                        android:textStyle="bold"
                    android:textSize="19dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@={taskModelXS.zhongxinyijian}"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="专家意见："
                        android:textStyle="bold"
                    android:textSize="19dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@={taskModelXS.zhanjiayijian}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="小组成员"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="22dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/xiaozuchengyuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="20dp"
            android:onClick="@{taskModelXS::onClickTijiao}"
            android:src="@drawable/ic_wancheng"
            android:visibility="@{taskModelXS.steacher ? View.VISIBLE : View.GONE}"
            app:backgroundTint="@android:color/holo_green_light"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp"
            app:rippleColor="#a6a6a6" />
    </android.support.design.widget.CoordinatorLayout>
</layout>
